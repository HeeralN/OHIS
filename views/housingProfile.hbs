        &nbsp;
        &nbsp;
          {{dishwasher}}</li>
      <li class="list-group-item">
        <span class="glyphicon glyphicon-road"></span>
        &nbsp;
        &nbsp;
          {{parking}}</li>
          <li class="list-group-item">
            <span class="glyphicon glyphicon-tint"></span>
            &nbsp;
            &nbsp;
              {{pool}}</li>
         <li class="list-group-item">
                <span class="glyphicon glyphicon-menu-right"></span>
                &nbsp;
                &nbsp;
                  {{laundry}}</li>
                      <li class="list-group-item">
                    <span class="glyphicon glyphicon-menu-right"></span>
                    &nbsp;
                    &nbsp;
                      {{gym}}</li>
                      <li class="list-group-item">
                    <span class="glyphicon glyphicon-menu-right"></span>
                    &nbsp;
                    &nbsp;
                      {{hardwood_floors}}</li>
                      <li class="list-group-item">
                    <span class="glyphicon glyphicon-menu-right"></span>
                    &nbsp;
                    &nbsp;
                      {{carpeted_floors}}</li>
                       <li class="list-group-item">
        <span class="glyphicon glyphicon-menu-right"></span>
        &nbsp;
        &nbsp;
        {{furnished}}</li>
    </ul> 
  </div>
  </div>
</div>
</div>
</div>
