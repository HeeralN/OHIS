<!DOCTYPE html>
<html lang="en">
<head>
  <title>Property Search for Landlords</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="template.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
<style>
  body {
    background-color: lavender;
    padding-top: 50px; 
}
.navbar {
    margin-bottom: 0;
    background-color: #b2a7cc !important;
    z-index: 9999;
    border: 0;
    font-family: Montserrat, sans-serif;
    font-size: 15px !important;
    line-height: 1.42857143 !important;
    letter-spacing: 2px;
    border-radius: 0;
  }
  
  .navbar li a, .navbar .navbar-brand {
    color: rgb(53, 18, 90) !important;
  }
  
  .navbar-nav li a:hover, .navbar-nav li.active a {
    color: #8b699b !important;
    background-color: rgb(255, 255, 255) !important;
  }
  
  .dropdown-menu li a:hover {
    background-color: #c9c4d5 !important;
  }

  .bg-4 {
    color: rgb(53, 18, 90);
    margin-bottom: 500;
    margin-top: 50;
    padding-top: 50;
    background-color: #b2a7cc !important;
  }

  .row {
    padding-left: 25px;
    padding-right: 25px;
    justify-content: center;
    align-content: center;
  }


</style>
</head>
<body>

  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>                        
        </button>
        <img src="images/logo.png" width="50" height="50" alt="Logo">
      </div>
      <div id="myNavbar">
      <ul class="nav navbar-nav navbar-collpase">
        <li class="active"><a href="/landlordProfile">Profile</a></li>
        <li><a href="/landlordMessaging">Messaging</a></li>
        <li><a href="/appointmentListLandlords">Appointments</a></li>
        <li class="dropdown"><a class="dropdown-toggle" data-toggle="dropdown" href="#">Housing<span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><a href="/viewLandlordListings">My Listings</a></li>
            <li><a href="/propertySearchLandlords">Search Listings</a></li>
          </ul>
        </li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
          <li><a href="#" onclick="logout()"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
        </ul>
        </div>
    </div>
  </nav>


<div container-fluid>
<div class="row">
  <div class="col-sm-4" style="background-color:lavender;">
    <div class="form-group">
      <form name="filtersForm" id="filtersForm" action="/propertySearchLandlords/sort" method="POST">
      <label for="groupSize">
        <br>Group size:</label>
      <select class="form-control" name="groupSize" id="groupSize">
        <option value="1"><a id="groupSize1">1</a></option>
        <option value="2"><a id="groupSize25">2-5</a></option>
        <option value="3"><a id="groupSize5">5+</a></option>
      </select>
    </div>
    <label>Select Amenities</label>
    <div class="checkbox">
      <label><input type="checkbox" name="dishwasher" id="dishwasher" value="1">Dishwasher</label>
    </div>
    {{!-- <div class="checkbox">
      <label><input type="checkbox" name="petfriendly" id="petfriendly" value="1">Pet Friendly</label>
    </div> --}}
    <div class="checkbox">
      <label><input type="checkbox" name="parking" id="parking" value="1">Parking</label>
    </div>
    <div class="checkbox">
      <label><input type="checkbox" name="pool" id="pool" value="1">Pool</label>
    </div>
    {{!-- <div class="checkbox">
      <label><input type="checkbox" name="oven" id="oven" value="1">Oven</label>
    </div> --}}
    <div class="checkbox">
      <label><input type="checkbox" name="laundry" id="laundry" value="1">Laundry</label>
    </div>
    <div class="checkbox">
      <label><input type="checkbox" name="gym" id="gym" value="1">Gym</label>
    </div>
    <label> Select Lease Types </label>
    <div class="checkbox">
      <label><input type="checkbox" id="length1" value="1">1 Month</label>
    </div>
    <div class="checkbox">
      <label><input type="checkbox" id="length3" value="3">3 Months</label>
    </div>
    <div class="checkbox">
      <label><input type="checkbox" id="length6" value="6">6 Months</label>
    </div>
    <div class="checkbox">
      <label><input type="checkbox" id="length12" value="12">12 Months</label>
    </div>
    <div class="checkbox">
      <label><input type="checkbox" id="length13" value="13">Longer than 1 year</label>
    </div>
    <div class="checkbox">
      <label><input type="checkbox" id="length2" value="2">Less than a semester</label>
    </div>
    <input type="submit" class="submit" value="Submit">
    <br><br><br><br><br><br><br><br><br><br>
  </div></form>
  <div class="col-sm-8" style="background-color:lavender;">
    <br>
    <form>
      <div class="input-group">
        <label>Results</label>
        <input type="text" class="form-control" placeholder="Search">
        <div class="input-group-btn">
          <button class="btn btn-default" type="submit">
            <i class="glyphicon glyphicon-search"></i>
          </button>
          <button type="button" class="btn dropdown-toggle" data-toggle="dropdown">Sort by <span class="caret"></span></button>
          <ul class="dropdown-menu" role="menu">
            <li><a href="/propertySearchLandlords/sort1">Price low to high</a></li>
            <li><a href="/propertySearchLandlords/sort2">Price high to low</a></li>
        </div>
      </div>
    </form>
    <br>
    <div class="container-fluid text-center bg-grey">
      <div class="row text-center">
        {{#each properties}}
        <div class="col-sm-4" style="background-color:lavender;">
          <div class="thumbnail" style="background-color:rgb(230, 200, 205);">
            <img src="images/apt.jpg">
            <p><strong>{{this.address}}</strong></p>
            <p>{{this.number_of_room}} bed(s) {{this.bath}} bath(s)</p>
            <form action="/housingProfileForLandlords" method="POST">
      <input type="hidden" id="listingId" name="listingId" value="{{this.listingId}}">
      <button type="submit" class="btn" data-target="#housingProfileLandlords">View</button>
    </form>
          </div>
        </div>     
        {{/each}}
    </div>
  </div>
</div>
  </div>
  {{#if message}}
    <h4 class="alert alert-danger mt-4">{{message}}</h4>
  {{/if}}
  
  <footer class="container-fluid bg-4 text-center margin">
    <p>Contact us at offcampushousinginfosystem@gmail.com</p>
  </footer>
  <script>
    function logout(){
      alert("You have been logged out");
      window.location='index';
    }
  </script>
   <script>
    function openHousingProfile() {
        window.location = '/housingProfileForLandlords';
    }
</script>
</body>
<script>
function validateForm() {
  let x = document.forms["filtersForm"]["groupSize"].value;
  if (x == "") {
    alert("Name must be filled out");
    return false;
  }

  </script>
</html>