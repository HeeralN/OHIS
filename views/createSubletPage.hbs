    <div class="col-sm-8" style="background-color:lightblue;">
        <br>
        <div class="rendered-form">
          <h1 id="control-8418835">Make a Sublet Listing</h1>

          <form action="/auth/createSubletPage" method="POST" id="listingForm">
              <!-- Address -->
              <label for="address" class="">Address of Listing: *</label>
              <div class="form-group">
                  <input type="text" class="form-control" id="street" placeholder="Street" required>
                  <input type="text" class="form-control" id="inputCity" placeholder="City" required>
                  <input type="text" class="form-control" id="inputState" placeholder="State" value="NJ" required>
                  <input type="number" pattern="[0-9]{5}" class="form-control" id="inputZip" placeholder="Zip" required>
                  <input type="country" class="form-control" id="inputCountry" placeholder="Country" value="USA" required>
              </div>
              <br><br><br><br><br><br>
              <!-- Website -->
              <div class="form-group">
                  <label for="building-website" class="formbuilder-text-label">Link to Building Website:</label>
                  <input type="text" class="form-control" name="building-website" id="building-website">
              </div>
              <!-- Description -->
              <div class="form-group">
                  <label for="description-of-listing" class="formbuilder-textarea-label">Description of Listing:</label>
                  <textarea type="textarea" class="form-control" name="description-of-listing" id="description-of-listing"></textarea>
              </div>
              <!-- Square Feet -->
              <div class="form-group">
                  <label class="form-label" for="square-feet">Square Feet: *</label>
                  <input type="number" id="square-feet" class="form-control" required="required" aria-required="true" />
              </div>
              <!-- Number of Bath -->
              <div class="form-group">
                  <label for="number-of-bath" class="formbuilder-text-label"># of Bath: *</label>
                  <input type="number" class="form-control" name="number-of-bath" id="number-of-bath" required="required" aria-required="true">
              </div>
              <!-- Total Rooms -->
              <div class="form-group">
                  <label for="num-total-rooms" class="formbuilder-text-label"># of Total Rooms *</label>
                  <input type="number" class="form-control" name="num-total-rooms" id="num-total-rooms" required="required" aria-required="true">
              </div>
              <!-- Occupancy Date -->
              <div class="form-group">
                  <label for="occupancy-date" class="text-label">Occupancy Date *</label>
                  <input type="date" class="form-control" name="occupancy-date" id="occupancy-date" required="required" aria-required="true">
              </div>
              <!-- Lease Type -->
              <div class="form-group">
                  <label for="lease-type" class="text-label">Lease Type: *</label>
                  <input type="text" class="form-control" name="lease-type" id="lease-type" required="required" aria-required="true" required>
              </div>
              <!-- Rental Rate of prices -->
              <div class="form-group">
                  <label for="rental-rate" class="text-label">Rental Rate: *</label>
                  <input type="number" class="form-control" name="rental-rate" id="rental-rate" required="required" aria-required="true">
              </div>
              <!-- Restrictions - Text Area -->
              <div class=" form-group">
                  <label for="restrictions" class="textarea-label">Restrictions</label>
                  <textarea type="textarea" class="form-control" name="restrictions" id="restrictions"></textarea>
              </div>
              <br><br><br>
              <!-- Ammenities -->
              <label> Select Amenities </label>
              <div class="checkbox">
                  <label><input type="checkbox" value="gym">Gym</label>
              </div>
              <div class="checkbox">
                  <label><input type="checkbox" value="pool">Pool</label>
              </div>
              <div class="checkbox">
                  <label><input type="checkbox" value="laundry">Laundry</label>
              </div>
              <div class="checkbox">
                  <label><input type="checkbox" value="parking">Parking</label>
              </div>
              <div class="checkbox">
                  <label><input type="checkbox" value="furnished">Furnished</label>
              </div>
              <div class="checkbox">
                  <label><input type="checkbox" value="dishwasher">Dishwasher</label>
              </div>
              <div class="checkbox">
                  <label><input type="checkbox" value="hardwood-floors">Hardwood Floors</label>
              </div>
              <div class="checkbox">
                  <label><input type="checkbox" value="carpeted-floors">Carpeted Floors</label>
              </div>
                     <div class="submit-button">
            <button type="submit" class="Submit">Submit</button>
        </div>
              {{!-- <button type="submit" class="btn-default btn" name="publish-listing" id="publish-listing" onclick="publishListing()">Publish Listing</button> --}}
